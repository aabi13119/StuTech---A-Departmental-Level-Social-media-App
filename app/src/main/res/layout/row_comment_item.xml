<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="0.5dp"
    android:background="@color/color_white"
    android:padding="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_commented_image"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="5dp"
        android:src="@drawable/my_profile_pic" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:padding="5dp"
        android:layout_toEndOf="@+id/user_commented_image"
        android:background="@drawable/rounded_textview_style">

        <TextView
            android:id="@+id/user_commented_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/tertiary_text_dark"
            android:textStyle="bold"
            android:text="user id" />

        <TextView

            android:id="@+id/user_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@android:color/tertiary_text_dark"
            android:textSize="13sp"
            android:text="your comment here..." />

        <TextView
            android:id="@+id/comment_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="date"
            android:textSize="8sp"
            android:textColor="@android:color/tertiary_text_dark"
            android:layout_marginStart="1dp"
            android:layout_marginTop="3dp"/>
    </LinearLayout>


</RelativeLayout>